<Window x:Class="PI_Ev_2.gui.RaceForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RaceForm" Height="110" Width="231"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <Button x:Name="btnAccept" Content="Aceptar" HorizontalAlignment="Left" Margin="36,41,0,0" VerticalAlignment="Top" Width="75" Click="BtnAccept_Click"/>
        <Button x:Name="btnCancel" Content="Cancelar" HorizontalAlignment="Left" Margin="116,41,0,0" VerticalAlignment="Top" Width="75" Click="BtnCancel_Click"/>
        <Label x:Name="lblName" Content="Nombre:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" Text="{Binding Path=Name}" HorizontalAlignment="Left" Height="23" Margin="71,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
